.chat-side 
 .side-header
  .side-header__box
   %p.side-header__box__username
    = current_user.name
   %ul.side-header__box__menu
    %li.side-header__box__edit-group
     =link_to new_group_path do
      =icon('fas','edit')
    %li.side-header__box__edit-user
     =link_to edit_user_path(current_user) do 
      =icon('fas','user-cog', class: 'icon')
 .groups
  - current_user.groups.each do |group|
   .group  
    = link_to "#" do
     %p.group__group-name 
      = group.name
     %p.group__latest-message
      メッセージないよ
     
    